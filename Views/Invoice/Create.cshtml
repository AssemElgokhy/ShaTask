@using ShaTask.ViewModels;
@model CreateItemViewModel

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="ItemName">ItemName</label>
        <input asp-for="ItemName" class="form-control"  placeholder="ItemName">
        <span asp-validation-for="ItemName" class="text-danger"></span>
     
    </div>
    <div class="form-group">
        <label asp-for="ItemPrice">ItemPrice</label>
        <input asp-for="ItemPrice" class="form-control" placeholder="ItemPrice">
        <span asp-validation-for="ItemPrice" class="text-danger"></span> 
        </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>